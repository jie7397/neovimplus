{
    "configurations": {
        "<name>: Launch": {
            "adapter": "debugpy",
            "filetypes": [
                "python"
            ],
            "configuration": {
                "name": "<name>: Launch",
                "type": "python",
                "request": "launch",
                "cwd": ".",
                "python": "python",
                "stopOnEntry": true,
                "console": "externalTerminal",
                "debugOptions": [],
                "program": "${file}"
            }
        }
    }
}
